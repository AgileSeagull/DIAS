# ========================
# SERVER CONFIGURATION
# ========================
PORT=5000
NODE_ENV=development

# ========================
# DATABASE CONFIGURATION
# ========================
# Local PostgreSQL connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dias
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# Alternative: Use DATABASE_URL for connection string
# DATABASE_URL=postgresql://postgres:your_password@localhost:5432/dias

# ========================
# JWT AUTHENTICATION
# ========================
# Generate a strong random secret for production:
# openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# ========================
# AWS CONFIGURATION
# ========================
# AWS Region (default: Mumbai, India)
AWS_REGION=ap-south-1

# AWS IAM User Credentials
# Create an IAM user with AmazonSNSFullAccess policy
# Get these from AWS Console > IAM > Users > Security Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# ========================
# CORS CONFIGURATION
# ========================
# Frontend URL for CORS (change for production)
FRONTEND_URL=http://localhost:5173

# ========================
# OPTIONAL SERVICES
# ========================
# Geocoding API for better country extraction
# Get free API key from: https://opencagedata.com/
# GEOCODING_API_KEY=your_geocoding_api_key_here

# ========================
# LOGGING
# ========================
# Options: development, production
LOG_LEVEL=info
